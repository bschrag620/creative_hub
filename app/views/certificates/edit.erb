<h2>Edit <%=@cert.name%> certificate</h2>
<form action="/certificates/<%=@cert.id%>" method="post">
	<input type="hidden" name="_method" value="patch">
	Certificate name: <input type="text" value="<%=@cert.name%>" name="certificate[name]"><br>
	Select tests required for this certificate: <br>
	<% @tests.each do |t| %>
		<ul>
			<input type="checkbox" value="<%=t.id%>" name="certificate[test_ids][]" <%="checked" if @cert.tests.include?(t) %>><%=t.name%> <br>
		</ul>
	<% end %>
	<input type="submit" id="edit_button" value="Edit certificate">
</form>